<androidx.cardview.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="#f2f1f0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="7dp">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/celeste_fondo"
            >

            <ImageView
                android:id="@+id/iconNews"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_newspaper"
                />

            <ImageView
                android:id="@+id/newsImage"
                android:layout_marginStart="5dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="40dp" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/newsTitle"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="15dp"
                android:layout_toRightOf="@+id/iconNews"
                android:paddingLeft="4dp"
                android:textColor="@color/FCE_color"
                android:text="Title Goes Here"
                style="@style/SubtitulosTheme_14"/>

            <TextView
                android:layout_toRightOf="@+id/newsImage"
                android:paddingLeft="4dp"
                android:id="@+id/newsCopete"
                style="@style/GeneralTextTheme_12"
                android:textSize="15dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/K_100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description Goes Here"
                android:layout_below="@+id/newsTitle"
                />

            <TextView
                android:id="@+id/newsTime"
                style="@style/GeneralTextTheme_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/newsCopete"
                android:layout_alignParentStart="false"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_toRightOf="@+id/newsImage"
                android:gravity="right"
                android:paddingTop="10dp"
                android:text="Fecha"
                android:textColor="@color/K_30"
                android:textSize="11dp"
                android:textStyle="italic"
                />

        </RelativeLayout>


</androidx.cardview.widget.CardView>