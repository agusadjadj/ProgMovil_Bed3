<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.HomeActivity"
    android:gravity="center"
    android:background="@color/FICH_color"
    android:orientation="vertical">

        <TextView
            android:id="@+id/TextPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:ems="10"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="50dp"
            android:text="BUENA"
            style="@style/SubtitulosTheme_14"
            android:textSize="20dp"
            android:layout_gravity="top"
            tools:ignore="MissingConstraints" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        app:layout_constraintLeft_toRightOf="@id/TextPersonName"
        app:layout_constraintStart_toEndOf="@id/TextPersonName"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:layout_gravity="right"
        android:src="@drawable/ic_baseline_logout"
        app:fabSize="mini"
        android:backgroundTint="@color/FCE_color"
        />


    <FrameLayout
        android:id="@+id/FragmentContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/TextPersonName"
        app:layout_constraintBottom_toTopOf="@id/navBar"
        tools:ignore="MissingConstraints">
    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu_principal"
        app:itemTextAppearanceActive="@style/SubtitulosTheme_14"
        app:itemIconTint="@color/white"
        android:background="@color/FCE_color"
        app:itemBackground="@color/FCE_color"
        app:itemTextColor="@color/white"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>