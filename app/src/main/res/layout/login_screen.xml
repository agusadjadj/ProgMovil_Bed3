<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ExtraText">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/FICH_color"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_marginTop="150dp"
            android:id="@+id/mTextUNL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/bree_serif_regular"
            android:text="FICH"
            android:textSize="100dp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/mTextBED"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/itcfranklingothicstd_deminegrita"
            android:text="Bedelia Móvil"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:layout_below="@id/mTextUNL"
            />

        <Button
            android:id="@+id/mButtonGoogle"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/mTextBED"
            android:layout_centerInParent="true"
            style="@style/GeneralButtonTheme"
            android:layout_marginTop="50dp"
            android:paddingStart="16dp"
            android:textSize="18dp"
            android:text="Ingresar con Google"
            android:drawableLeft="@drawable/ic_google_logo"
            android:textColor="@color/K_100"
            android:background="@color/white"
            android:textAlignment="center"

            />



    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/itcfranklingothicstd_regular"
        android:text="Creado por"
        android:textSize="15dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/nombrea"
        />

    <TextView
        android:id="@+id/nombrea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/itcfranklingothicstd_regular"
        android:text="Agustín Adjadj"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>