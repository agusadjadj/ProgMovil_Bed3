<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/celeste_fondo"
    >


        <TextView
            android:id="@+id/fn_volanta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Volanta"
            style="@style/TitulosTheme"
            android:textSize="13sp"
            android:textColor="@color/K_70"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/guideline"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/fn_dateTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="FechaHora"
            style="@style/GeneralTextTheme_12"
            android:paddingTop="2dp"
            android:textSize="10sp"
            android:textColor="@color/K_70"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/guideline"/>

    <TextView
        android:id="@+id/fn_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="8dp"
        android:text="Titulo"
        style="@style/SubtitulosTheme_14"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/FCE_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fn_volanta" />

    <ImageView
        android:id="@+id/fn_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        app:layout_constraintBottom_toTopOf="@id/fn_body"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fn_Title" />

    <TextView
        android:id="@+id/fn_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="18dp"
        android:text="Copete"
        android:textColor="@color/K_100"
        style="@style/GeneralTextTheme_12"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fn_image" />



</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>