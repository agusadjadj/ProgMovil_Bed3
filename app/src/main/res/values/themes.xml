<resources

    xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.DayLight" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/FICH_color</item>
        <!-- <item name="colorPrimaryVariant">@color/purple_700</item> -->
        <item name="colorOnPrimary">@color/K_80</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/FICH_color</item>
        <item name="colorSecondaryVariant">@color/ATE_color</item>
        <item name="colorOnSecondary">@color/FIQ_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowSoftInputMode">stateHidden|adjustResize</item>
    </style>

    <!-- Titulos generales, grandes. -->
    <style name="TitulosTheme">
        <item name="android:fontFamily"> @font/itcfranklingothicstd_mediocondensada </item>
        <item name="android:textSize"> 30sp </item>
    </style>

    <!-- Subtitulos generales, no tan grandes. -->
    <style name="SubtitulosTheme_14">
        <item name="android:textSize"> 14sp </item>
        <item name="android:fontFamily"> @font/itcfranklingothicstd_medio</item>
    </style>

    <!-- Textos generales -->
    <style name="GeneralTextTheme_12">
        <item name="android:textSize"> 12sp </item>
        <item name="android:fontFamily"> @font/itcfranklingothicstd_regular </item>
    </style>

    <!-- Botones generales -->
    <style name="GeneralButtonTheme" >
        <item name="android:fontFamily"> @font/itcfranklingothicstd_medio </item>
        <item name="android:textSize"> 15sp </item>
        <item name="android:textAllCaps"> true </item>
        <item name="android:background"> @drawable/rounded_button </item>
    </style>

</resources>